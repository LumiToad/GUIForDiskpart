<Window x:Class="GUIForDiskpart.Presentation.View.Windows.WStartupLoading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIForDiskpart.Presentation.View.Windows"
        mc:Ignorable="d"
        Title="StartupLoadingWindow" Height="400" Width="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/resources/Startup.png"/>
        </Grid.Background>
        <ProgressBar HorizontalAlignment="Left" Height="20" Margin="20,280,0,0" VerticalAlignment="Top" Width="555" IsIndeterminate="True" Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"/>
        <Label x:Name="LoadingLabel" Content="Loading" HorizontalAlignment="Left" Margin="20,340,0,0" VerticalAlignment="Top" Height="40" Width="555" FontFamily="Consolas" Padding="0,0,0,1"/>
        <Label Content="Retrieving Storage Information..." HorizontalAlignment="Left" Margin="20,322,0,0" VerticalAlignment="Top" Padding="0,0,0,0"/>
    </Grid>
</Window>
