<Window x:Class="GUIForDiskpart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIForDiskpart"
        mc:Ignorable="d"
        
        Title="GUIFD - GUI for Diskpart" WindowState="Normal" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow" MinWidth="800" MinHeight="600">
    <Grid x:Name="MainGrid" Background="#FF3E3E3E">
        <DockPanel LastChildFill="true">
            <Menu DockPanel.Dock="Top" Height="20">
                
                <MenuItem Header="File">
                    <MenuItem Header="Save Log" Click="SaveLog"/>
                    <Separator/>
                    <MenuItem Header="Quit" Click="Quit_Click"/>
                </MenuItem>

                <MenuItem Header="Commands">
                    <MenuItem Header="Reload Drives" Click="RetrieveDriveData_Click">
                        <MenuItem.Icon>
                            <Image Source="/resources/guifdG.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

                <MenuItem Header="Diskpart">
                    <MenuItem Header="List">
                        <MenuItem.Icon>
                            <Image Source="/resources/DiskpartD.png" />
                        </MenuItem.Icon>
                        <MenuItem Header="Disk" Click="ListDisk_Click"/>
                        <MenuItem Header="Volume" Click="ListVolume_Click"/>
                        <MenuItem Header="Partition" Click="ListPart_Click"/>
                        <MenuItem Header="VDisk" Click="ListVdisk_Click"/>
                    </MenuItem>
                </MenuItem>

                <MenuItem Header="Help">
                    <MenuItem Header="About" Click="About_Click"/>
                    <MenuItem Header="To Wiki"/>
                    <MenuItem Header="To Website" Click="Website_Click"/>
                </MenuItem>

            </Menu>
                <Grid Margin="10,10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="ConsoleReturn" TextWrapping="Wrap" FontFamily="Consolas" AllowDrop="False" Background="#FF252525" IsUndoEnabled="False" Foreground="#FF009409" VerticalScrollBarVisibility="Visible" TextChanged="ConsoleReturn_TextChanged" IsReadOnly="True" MinWidth="200" Grid.ColumnSpan="2" Grid.Row="1" MinHeight="200" Width="NaN" UseLayoutRounding="True" Padding="0,5,0,5" d:IsHidden="True" Margin="0,5,0,5"/>
                <GridSplitter Grid.Row="0" Height="3" Width="auto" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

                <ScrollViewer Padding="0,5,0,5" VerticalScrollBarVisibility="Auto" Margin="0,5,0,5">
                    <StackPanel x:Name="DriveStackPanel" Width="NaN" Height="NaN" MinWidth="100" MinHeight="100" Margin="5,5,5,5"/>
                </ScrollViewer>
            </Grid>
        </DockPanel>

    </Grid>

    <Window.Resources>
        <DataTemplate x:Key="driveTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Path=DriveName}" />
                <TextBlock Text="{Binding Path=DriveLetter}"/>
                <TextBlock Text="{Binding Path=TotalSize}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
</Window>
    

    
