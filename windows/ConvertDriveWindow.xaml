<Window x:Class="GUIForDiskpart.windows.ConvertDriveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIForDiskpart.windows"
        mc:Ignorable="d"
        Title="ConvertDriveWindow" Height="450" Width="800">
    <Grid Background="#FF3E3E3E">
        <TextBlock x:Name="DiskDetailValue" HorizontalAlignment="Left" Margin="21,23,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="328" Width="259" Foreground="#FF66CE51"/>
        <Button x:Name="ConfirmButton" Content="Convert" Margin="387,86,327,315" Click="ConfirmButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" Margin="487,86,227,315" Click="CancelButton_Click"/>
        <Label Content="Options:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="387,31,0,0"/>
        <ComboBox x:Name="ConvertOptionValue" HorizontalAlignment="Left" Margin="489,35,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="GPT" IsSelected="True"/>
            <ComboBoxItem Content="MBR"/>
            <ComboBoxItem Content="BASIC"/>
            <ComboBoxItem Content="DYNAMIC"/>
        </ComboBox>

    </Grid>
</Window>
